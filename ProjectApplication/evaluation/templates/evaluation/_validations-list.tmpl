{% for item in validations %}
    {% if item.ok %}
        <i class="fa fa-check" style="color:green"></i> {{ item.message_all_good }}.<br>
    {% else %}
        <i class="fa fa-times" style="color:red"></i> {{ item.message_problem }}{% if item.proposals %}:
        <ul>
            {% for proposal in item.proposals %}
                <li>
                {% include 'common/_person_with_orcid.tmpl' with person=proposal.applicant %} -
                <a href="{{ proposal.url_fix_validation_error }}">{{ proposal.title }}</a>
            {% endfor %}
        </ul>
    {% else %}
        <br>
    {% endif %}
    {% endif %}
{% endfor %}