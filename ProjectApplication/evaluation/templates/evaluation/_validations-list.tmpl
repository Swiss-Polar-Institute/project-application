{% for item in validations %}
    {% if item.ok %}
        <i class="fa fa-check" style="color:green"></i> {{ item.message_all_good }}.<br>
    {% else %}
        <i class="fa fa-times" style="color:red"></i> {{ item.message_problem }}:
        {% if item.proposals %}
            <ul>
                {% for proposal in item.proposals %}
                    <li>
                        <a href="{% url 'logged-call-evaluation-proposal-detail' pk=proposal.id %}">{{ proposal.title }}</a>
                        - {{ proposal.applicant.person.full_name }}</li>
                {% endfor %}
            </ul>
        {% endif %}
    {% endif %}
{% endfor %}