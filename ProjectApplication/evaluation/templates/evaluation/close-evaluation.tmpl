{% extends 'logged/_base_with_menus.tmpl' %}
{% load crispy_forms_tags %}

{% block contents %}
    <div class="row">
        <div class="col-10">
            <h1>Close call evaluation for: <a
                    href="{% url 'logged-call-detail' id=call.id %}">{{ call.long_name }}</a></h1>

            <p>
            <h3><span style="color: red;">This is not finished - available on staging only, still in development. Carles.</span>
            </h3>
            </p>

            {% for check in checks %}
                {% if check.proposals %}
                    <i class="fa fa-times" style="color:red"></i> {{ check.message_problem }}:
                    <ul>
                        {% for proposal in check.proposals %}
                            <li>
                                <a href="{% url 'logged-call-evaluation-proposal-detail' id=proposal.id %}">{{ proposal.title }}</a>
                                - {{ proposal.applicant.person.full_name }}</li>
                        {% endfor %}
                    </ul>
                {% else %}
                    <i class="fa fa-check" style="color:green"></i> {{ check.message_all_good }}.
                {% endif %}
            {% endfor %}

            {% if not all_good %}
                <p>
                </p>
                <p>
                    To continue please fix the errors and reload this page.
                </p>
            {% else %}
                <p>
                    If you continue the projects for the call {{ call.long_name }} will be created. This cannot be
                    reversed.
                <ul>
                    <li>Total number of proposals received: {{ total_number_of_proposals }}</li>
                    <li>Total number of proposals eligible: {{ total_number_of_eligible }}</li>
                    <li>Total number of proposals not funded: {{ total_number_of_eligible_not_funded }}</li>
                    <li>Total number of proposals funded: {{ total_number_of_funded }}</li>
                </ul>
                </p>
                <p>
                    TO DO: add button
                </p>
            {% endif %}
            </p>
        </div>
        <div class="col-2">
        </div>
    </div>
{% endblock %}
