{% extends 'logged/_base_with_menus.tmpl' %}
{% load crispy_forms_tags %}

{% block contents %}
    <div class="row">
        <div class="col-10">
            <h1>Call Evaluation for: <a href="{% url 'logged-call-detail' id=call.id %}">{{ call.long_name }}</a></h1>
            {% crispy call_evaluation_form %}
        </div>
        <div class="col-2">
            {% if call.callevaluation %}
                <a class="btn btn-primary d-print-none"
                   href="{% url 'logged-call-evaluation-detail' pk=call.callevaluation.id %}">View Call
                    Evaluation</a>
            {% endif %}
        </div>
    </div>
{% endblock %}
