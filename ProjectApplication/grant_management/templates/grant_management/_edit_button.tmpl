{% if project.is_active %}
    <a class="btn btn-primary btn-sm" href="{% url viewname project=project.id %}">Edit</a>
{% else %}
    <span class="d-inline-block" tabindex="0" data-toggle="tooltip"
          title="Cannot edit: project status is {{ project.status }}">
        <button class="btn btn-primary btn-sm" style="pointer-events: none;" type="button" disabled>Edit</button>
    </span>
{% endif %}