{% load thousands_separator %}
{% load ordinal %}

{% with installments=project.installment_set.all %}
    <table id="installments_table" class="table table-striped table-sm table-hover display">
        <thead>
        <tr>
            <th>Installment</th>
            <th>Amount (CHF)</th>
            <th>Sent (CHF) <a data-toggle="tooltip" title="Total of invoices sent for payment"><i class="fas fa-info-circle"></i></a></th>
        </tr>
        </thead>
        <tbody>
        {% for installment in installments %}
            <tr>
                <td data-sort="{{ installment.number }}">{{ installment.number|ordinal }}</td>
                <td>{% include 'common/_value-or-dash.tmpl' with value=installment.amount|thousands_separator %}</td>
                <td>{% include 'common/_value-or-dash.tmpl' with value=installment.sent_for_payment|thousands_separator %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <script type="text/javascript" class="init">
        $(document).ready(function () {
            $('#installments_table').DataTable({
                    "pageLength": 100,
                    "order": [[1, "asc"]],
                    "bFilter": false,
                    "bPaginate": false,
                    "info": false,
                    "language": {
                        "zeroRecords": "No installments have been added"
                    },
                    "columns": [
                        {"width": "33%"},
                        {"width": "33%"},
                        {"width": "33%"}
                    ],
                }
            );
        });
    </script>
{% endwith %}