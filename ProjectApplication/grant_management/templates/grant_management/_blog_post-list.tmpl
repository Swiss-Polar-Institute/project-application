{% with blog_posts=project.blogpost_set.all %}
    <table id="blog_posts_table" class="table table-striped table-sm table-hover display">
        <thead>
        <tr>
            <th>Due</th>
            <th>Received</th>
            <th>Post</th>
            <th>Author</th>
        </tr>
        </thead>
        {% for blog_post in blog_posts %}
            <tr>
                <td data-sort="{{ blog_post.due_date|date:"Y-m-d" }}">{% include 'common/_date-or-dash.tmpl' with date=blog_post.due_date %}</td>
                <td data-sort="{{ blog_post.received_date|date:"Y-m-d" }}">{% include 'common/_date-or-dash.tmpl' with date=blog_post.received_date %}</td>
                <td>{{ blog_post.text|linebreaksbr }}</td>
                <td>{{ blog_post.author }}</td>
            </tr>
        {% endfor %}
    </table>

    <script type="text/javascript" class="init">
        $(document).ready(function () {
            $('#blog_posts_table').DataTable({
                    "pageLength": 100,
                    "order": [[1, "asc"]],
                    "bFilter": false,
                    "bPaginate": false,
                    "info": false,
                    "language": {
                        "zeroRecords": "No blog posts have been created"
                    },
                    "columns": [
                        {"width": "15%"},
                        {"width": "15%"},
                        {"width": "55%"},
                        {"width": "15%"}
                    ],
                }
            );
        });
    </script>

    <style>
        #blog_posts_table td:nth-child(1), td:nth-child(2) {
            white-space: nowrap;
        }
    </style>
{% endwith %}