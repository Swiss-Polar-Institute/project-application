{% extends 'logged/_base_with_menus.tmpl' %}
{% load crispy_forms_tags %}

{% block contents %}
    <div class="row">
        <div class="col-10">
            <form action="" enctype="multipart/form-data" method="post">
                <h3>Blog Posts</h3>
                <input name="csrfmiddlewaretoken" type="hidden" value="{{ csrf_token }}">
                {% include 'common/_dynamic_formset.tmpl' with form_set=blog_posts_form %}

                {% include 'common/_submit-button.tmpl' with value="Save Blog Posts" name="save_blog_posts" %}
                {% include 'common/_cancel-button.tmpl' with value="Cancel" url=cancel_url %}
            </form>
            <p></p>
        </div>
        <div class="col-2">
        </div>
    </div>
{% endblock %}