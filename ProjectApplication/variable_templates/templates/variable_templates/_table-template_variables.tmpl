<div class="row">
    <div class="col-6">
        <table class="table table-striped table-sm">
            <thead>
            <tr>
                <th>Name</th>
                <th>Value</th>
            </tr>
            </thead>
            <tbody>
            {% for template_variable in template_variables %}
                <tr>
                    <td>{{ template_variable.name }}</td>
                    <td>{{ template_variable.value }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>