{% extends '_base.tmpl' %}
{% load static %}
{% block title %}Projects application{% endblock %}

{% block body_contents %}
    <div class="container theme-showcase" role="main">
        {% include "_logo.tmpl" %} <H1>List of calls</H1>

        {% if calls %}
        <ul>
            {% for call in calls %}
                <li>{{ call.long_name }} - <a href="{% url 'call-update' id=call.id %}">Edit call</a> - <a href="{% url 'proposal-add' %}?call={{ call.pk }}">Create Proposal</a></li>
            {% endfor %}
        </ul>
        {% else %}
            No calls at the moment.
        {% endif %}

    </div>
{% endblock %}
