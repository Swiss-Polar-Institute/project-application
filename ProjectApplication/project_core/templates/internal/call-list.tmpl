{% extends '_base.tmpl' %}
{% block title %}Projects application{% endblock %}

{% block body_contents %}
    <div class="container theme-showcase" role="main">
        {% include "_logo.tmpl" %}
        <H1>List of all calls</H1>

        <a href="{% url 'internal-homepage' %}">Internal Homepage</a>
        <p></p>
        {% if calls %}
        <ul>
            {% for call in calls %}
                <li>{{ call.long_name }} - <a href="{% url 'call-update' id=call.id %}">Edit call</a> - <a href="{% url 'proposal-add' %}?call={{ call.pk }}">Create Proposal</a></li>
            {% endfor %}
        </ul>
        {% else %}
            No calls at the moment.
        {% endif %}

        <a href="{% url 'call-add' %}">Create new call.</a>

    </div>
{% endblock %}
