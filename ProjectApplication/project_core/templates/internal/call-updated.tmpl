{% extends '_base.tmpl' %}
{% block title %}Internal homepage{% endblock %}

{% block body_contents %}
    <div class="container theme-showcase" role="main">
        {% include "_logo.tmpl" %}
        <H1>Call {{ action }}!</H1>

        You can:
        <ul>
            <li><a href="{% url 'call-update' id=id %}">Edit the call</a></li>
            <li><a href="{% url 'proposal-add' %}?call={{ id }}">Create Proposal</a></li>
            <li><a href="{% url 'internal-calls-list' %}">List of calls</a></li>
        </ul>
    </div>
{% endblock %}
