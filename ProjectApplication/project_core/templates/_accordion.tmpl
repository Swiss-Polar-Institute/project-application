<div class="accordion" id="{{ prefix }}Accordion">
    <div class="card" style="padding: 0px">
        <div class="card-header">
            <span class="mb-0">
                <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#{{ prefix }}">
                    {{ button_text }}
                </button>
            </span>
        </div>

        <div id="{{ prefix }}" class="collapse hidden"
             data-parent="#{{ prefix }}Accordion">
            <div class="card-body">
                {% include template_file %}
            </div>
        </div>
    </div>
</div>
