{% extends 'logged/_base_with_menus.tmpl' %}
{% load request_is_management %}

{% block contents %}
    <h1>Users</h1>
    <p></p>
    {% if users %}
        <table id="list-of-users" class="table table-striped table-sm table-hover display">
            <thead>
            <tr>
                <th>username</th>
                <th>First name</th>
                <th>Last name</th>
                <th>Active</th>
                <th>Groups</th>
            </tr>
            </thead>
            <tbody>
            {% for project in projects %}
                <tr>
                    <td>{{ user.username }}</td>
                    <td>{{ user.first_name }}</td>
                    <td>{{ user.last_name }}</td>
                    <td>
                        <a class="btn btn-primary btn-xs"
                           href="{% url 'logged-project-detail' pk=project.id %}">View</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        No users to be displayed. Please contact the administrator: this is a bug.
    {% endif %}

    <script type="text/javascript" class="init">
        $(document).ready(function () {
            $('table.display').DataTable({
                "pageLength": 100,
                "columns": [
                    {"width": "10%"},
                    {"width": "50%"},
                    {"width": "20%"},
                    {"width": "10%"},
                    {"width": "10%"}
                ],
                "searchHighlight": true
            });
        });
    </script>
    <p></p>
{% endblock %}
