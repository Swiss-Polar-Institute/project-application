{% extends 'logged/_base_with_menus.tmpl' %}
{% load crispy_forms_tags %}
{% load request_is_management %}
{% block subtitle %}Proposal{% endblock %}

{% block contents %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-10">
                {% include 'common/_proposal-detail.tmpl' %}
                {% if request|request_is_management %}
                    <hr>
                    {% include 'comments/_comments-attachments.tmpl' %}
                {% endif %}
            </div>
            <div class="col-2">
                {% if request|request_is_management %}
                    <p>
                        {% include 'evaluation/_eligibility_decision-form.tmpl' %}
                        {% for change in eligibility_history %}
                            <strong>What:</strong> {{ change.description }}<br>
                            <strong>Now:</strong> {{ change.now }}<br>
                            <strong>Previous:</strong> {{ change.previous }}<br>
                            <strong>Who:</strong> {{ change.history_user }}<br>
                            <strong>Date:</strong> {{ change.history_date }}<br>
                            <hr>
                        {% endfor %}
                    </p>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
