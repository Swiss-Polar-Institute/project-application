{% extends 'logged/_base_with_menus.tmpl' %}
{% load crispy_forms_tags %}
{% block subtitle %}Proposal{% endblock %}

{% block contents %}
    <div class="container-fluid">
    <div class="row">
        <div class="col-10">
            {% include 'common/_proposal-detail.tmpl' with edit_button=0 %}
            <hr>
            <h2>Comments</h2>
            {% include 'common/_accordion.tmpl' with prefix='comments' button_text_collapsed='View Comments' button_text_not_collapsed='Hide Comments' template_file='comments/_comments.tmpl' %}
            <br>
            <h2>Attachments</h2>
            {% include 'common/_accordion.tmpl' with prefix='files' button_text_collapsed='View Attachments' button_text_not_collapsed='Hide Attachments' template_file='comments/_attachments.tmpl' %}
            <br>
        </div>
        <div class="col-2">
            <p>
                {% include 'evaluation/eligibility_decision_form.tmpl' %}
            </p>
        </div>
    </div>
{% endblock %}
