<ul>
    {% for callquestion in call_part.questions %}
        <li>
            Question: <a
                href="{% url 'logged-call-question-detail' call_pk=callquestion.call_part.call.pk call_question_pk=callquestion.pk %}">{{ callquestion.question_text }}</a>
        </li>
    {% endfor %}
    {% if call_part.callquestion_set.all %}
        <a href="{% url 'logged-call-question-add' call_pk=call_part.call.pk call_part_pk=call_part.pk %}">Add/remove
            questions</a>
    {% else %}
        <li>No questions in this call part.</li>
        <a href="{% url 'logged-call-question-add' call_pk=call_part.call.pk call_part_pk=call_part.pk %}">Add
            questions</a>
    {% endif %}
    <br>
    <a href="{% url 'logged-call-part-file-list' call_pk=call_part.call.pk call_part_pk=call_part.pk %}">Add/remove
        files</a>
</ul>
