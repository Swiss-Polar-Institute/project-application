{% if parts %}
    <ul>
        {% for part in parts %}
            <li>
                <a href="{% url 'logged-call-part-detail' call_pk=part.call.pk proposal_part_pk=part.pk %}">Part {{ part.heading_number }}: {{ part.title }}</a>
                <ul>
                    {% for callquestion in part.callquestion_set.all %}
                        <li>
                            <a href="{% url 'logged-call-question-detail' call_pk=callquestion.call_part.call.pk call_question_pk=callquestion.pk %}">{{ callquestion.question_text }}</a>
                        </li>
                    {% empty %}
                        <li>
                            No question in this call part. <a href="">Add</a>
                        </li>
                    {% endfor %}
                </ul>
            </li>
        {% endfor %}
    </ul>
    <a class="btn btn-primary" href="{% url 'logged-call-part-add' call_pk=call.pk %}">Create Part</a>
{% else %}
    There are no extra parts on this call.
    {% if call %}
        <a class="btn btn-primary" href="{% url 'logged-call-part-add' call_pk=call.pk %}">Create a Part.</a>
    {% endif %}
{% endif %}