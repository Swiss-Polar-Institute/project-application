{% extends 'logged/_base_with_menus.tmpl' %}
{% load crispy_forms_tags %}

{% block contents %}
    <div class="row">
        <div class="col-10">
            {% if form.instance.id %}
                <h1>Edit question</h1>
            {% else %}
                <h1>Add/remove questions</h1>
            {% endif %}
            <p>
                <strong>Call:</strong> <a
                    href="{% url 'logged-call-detail' pk=call.pk %}">{{ call.long_name }}</a><br>
                <strong>Call part:</strong> <a
                    href="{% url 'logged-call-part-detail' call_pk=callpart.call.pk call_part_pk=callpart.pk %}">{{ callpart.title }}</a><br>
            </p>

            {% crispy form %}
        </div>
        <div class="col-2">
            {% if form.instance.id %}
                <a class="btn btn-primary"
                   href="{% url 'logged-call-part-question-detail' call_pk=call_question.call_part.call.pk call_question_pk=object.id %}">View
                    Call Question</a>
            {% endif %}
        </div>
    </div>
{% endblock %}
