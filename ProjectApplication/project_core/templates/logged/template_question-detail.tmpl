{% extends 'logged/_base_with_menus.tmpl' %}
{% load crispy_forms_tags %}

{% block contents %}
    <div class="row">
        <div class="col-10">
            <h1>Template question details</h1>

            <p></p>
            <p><strong>Question:</strong><br>{{ template_question.question_text }}</p>
            <p><strong>Question description:</strong><br>{{ template_question.question_description }}</p>
            <p><strong>Answer type:</strong><br>{{ template_question.answer_type }}</p>
            <p><strong>Question max words:</strong><br>{% if template_question.answer_max_length %}
                {{ template_question.answer_max_length }} {% else %}
                Unlimited {% endif %}</p>
            <p><strong>Answer is
                required:</strong> {% include 'common/_check-icon.tmpl' with value=template_question.answer_required %}</p>
        </div>
        <div class="col-2">
            <a class="btn btn-primary" href="{% url 'logged-template-question-update' pk=template_question.id %}">Edit Template Question</a>
        </div>
    </div>
{% endblock %}
