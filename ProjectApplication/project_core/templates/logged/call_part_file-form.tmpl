{% extends 'logged/_base_with_menus.tmpl' %}

{% load crispy_forms_tags %}

{% block contents %}
    <div class="row">
        <div class="col-10">
            <h1>{{ action }} file</h1>
            <strong>Call:</strong> {{ call_part.call.long_name }}<br>
            <strong>Call Part:</strong> {{ call_part.title }}<br>
            <p></p>
            {% crispy form %}
        </div>

        <div class="col-2">
            {% if file %}
                <a class="btn btn-primary"
                   href="{% url 'logged-call-part-file-detail' call_pk=call_part.call.pk call_file_pk=file.pk %}">View
                    File</a>
            {% endif %}
        </div>
    </div>
{% endblock %}
