{% extends 'common/_base.tmpl' %}
{% load static %}
{% block title %}Projects application{% endblock %}

{% block body_contents %}
    <div class="container" role="main">
        {% include "external/_logo.tmpl" %} <H1>Proposal {{ action }}</H1>
        {% include "common/_messages-box.tmpl" %}

        {% if proposal.status_is_draft %}
            Draft
        {% elif proposal.status_is_submitted %}
            Submitted
        {% else %}
            <!-- Status is not draft either submitted? -->
        {% endif %}

        <p>Proposal identifier: {{ proposal.uuid }}</p>
        <p>Proposal status: {{ proposal.proposal_status }}</p>

        <p>You can access and edit your proposal using this link: <a href="{% url 'proposal-update' uuid=uuid %}">View proposal</a></p>

        <p>Thank you for submitting your proposal.</p>
    </div>
{% endblock %}
