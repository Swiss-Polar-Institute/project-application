{% extends 'common/_base.tmpl' %}
{% load git_commit %}
{% load static %}
{% block title %}Swiss Polar Institute{% endblock %}

{% block body_contents %}
    <div class="container" role="main">
        {% include 'common/_logo.tmpl' %}
        <p></p>
    </div>
    <section class="hero">
        <div class="hero--img">
          <img src="{% static 'images/hero.png' %}" alt="Hero Image">
          <div class="legendimg">@Giovanna Ceppi, all rights reserved</div> 
        </div>
        <div class="container">
            <div class="hero--content">
                <h1>Welcome to the SPI Funding Applications</h1>
                <p>Please choose one of the options below.</p>
            </div>
        </div>
    </section>

    <section class="choose-option">
        <div class="container">
            <div class="choose-options--wrapper">
                <a href="{% url 'call-list' %}" title="Submit a proposal" class="card--options">
                    <div class="card--options--left">
                        <div class="subtitle">For applicants</div>
                        <h3>Submit a proposal</h3>
                    </div>
                    <div class="card--options--right">
                        <div class="btn-icon">
                            <span class="icon">
                                <img src="{% static 'images/angle-right.svg' %}" alt="Right Arrow">
                            </span>
                        </div>
                    </div>
                </a>

                <a href="{% url 'logged-homepage' %}" title="Login" class="card--options">
                    <div class="card--options--left">
                        <div class="subtitle">For reviewers / administrators</div>
                        <h3>LOGIN</h3>
                    </div>
                    <div class="card--options--right">
                       <div class="btn-icon">
                            <span class="icon">
                                <img src="{% static 'images/angle-right.svg' %}" alt="Right Arrow">
                            </span>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </section>
    <footer class="site-footer">
        <div class="container">
            <p>Copyright &copy; 2024 Swiss Polar Institute</p>
        </div>
    </footer>
{% endblock %}
