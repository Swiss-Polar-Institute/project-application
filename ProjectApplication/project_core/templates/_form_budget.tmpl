Maximum budget: {{ maximum_budget }}

<font color="red">
    {{ budget_form.non_field_errors }}
</font>
<p>
    {{ budget_form.management_form }}

    <table border="1">
        {% for form in budget_form.forms %}
            {% if forloop.first %}
                <thead>
                    <tr>
                        {% for field in form %}
                            <th>{{ field.label }}</th>
                        {% endfor %}
                    </tr>
                </thead>
            {% endif %}

            <tbody>

            <tr>
                {% for field in form %}
                <td>
                        {{ field.errors.as_ul }}
                        {{ field.label }}
                        {{ field }}
                </td>
                {% endfor %}
            </tr>
            {% endfor %}
        </tbody>
    </table>
