{% extends '_base.tmpl' %}
{% block title %}Projects application{% endblock %}

{% block body_contents %}
{% include 'management/_navbar.tmpl' with active='calls' %}

<div class="container-fluid">
    <div class="row">
        {% include 'management/_calls-sidebar.tmpl' with active='calls-list' %}

        <div class="col-md-9 ml-sm-auto col-lg-10 px-4" role="main">
            <div>
                <ul class="nav nav-tabs">
                    <li class="nav-item active">
                        <a class="nav-link active" id="open-tab" data-toggle="tab" href="#open" role="tab">Open</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="future-tab" data-toggle="tab" href="#future" role="tab">Future</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="closed-tab" data-toggle="tab" href="#closed" role="tab">Closed</a>
                    </li>
                </ul>
            </div>

            <div class="tab-content">
                <div class="tab-pane fade show active" id="open" role="tabpanel">
                    <h1>Open calls</h1>
                    {% if open_calls %}
                    {% include 'management/_table_of_calls.tmpl' with calls=open_calls %}
                    {% else %}
                    No open calls at the moment.
                    {% endif %}
                </div>
                <div class="tab-pane fade" id="future" role="tabpanel">
                    <h1>Future calls</h1>
                    {% if future_calls %}
                    {% for call in future_calls %}
                    {% include 'management/_table_of_calls.tmpl' with calls=future_calls %}
                    {% endfor %}
                    {% else %}
                    No future calls at the moment.
                    {% endif %}
                </div>
                <div class="tab-pane fade" id="closed" role="tabpanel">
                    <h1>Closed calls</h1>
                    {% if closed_calls %}
                    {% include 'management/_table_of_calls.tmpl' with calls=closed_calls %}
                    {% else %}
                    No past calls at the moment.
                    {% endif %}
                </div>
            </div>
        </div>
        <script type="text/javascript" class="init">
        $(document).ready(function() {
            $('table.display').DataTable({
                "pageLength": 100}
                );
        } );
        </script>
    </div>
</div>
{% endblock %}
