<table class="table table-striped table-sm table-hover">
<thead>
    <th>Name</th>
    <th>Proposals</th>
    <th>Deadline</th>
    <th>Actions</th>
</thead>

<tbody>
{% for call in calls %}
    <tr>
        <td>{{ call.long_name }}</td>
        <td>{{ call.number_of_proposals }}</td>
        <td>{{ call.submission_deadline }}</td>
        <td>
            <a href="{% url 'call-update' id=call.id %}">Edit</a>
            <a href="{% url 'proposal-add' %}?call={{ call.pk }}">Create Proposal</a>
        </td>
    </tr>
{% endfor %}
</tbody>
</table>
