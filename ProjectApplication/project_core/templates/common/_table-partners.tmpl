{% if proposal.proposalpartner_set.all %}
    <table class="table table-striped table-sm">
        <tbody>
        {% for partner in proposal.proposalpartner_set.all %}
            <tr>
                <td>
                    {{ partner.person.academic_title }}
                    {{ partner.person.person.first_name }}
                    {{ partner.person.person.surname }}
                    <br>
                    <strong>Group / lab:</strong> {{ partner.person.group }}
                    <br>
                    <strong>Career stage:</strong> {{ partner.career_stage }}
                    <br>
                    <strong>Role:</strong> {{ partner.role.short }}
                    <br>
                    <strong>Role description:</strong>
                    <div class="pre-with-newlines border p-3 bg-white rounded">{{ partner.role_description }}</div>
                    <br>
                    <strong>Competences:</strong>
                    <div class="pre-with-newlines border p-3 bg-white rounded">{{ partner.competences }}</div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% else %}
    No partners for this proposal
{% endif %}