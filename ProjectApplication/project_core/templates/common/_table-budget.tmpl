{% load thousands_separator %}
{% load spi_linebreaksbr %}

<table class="table table-striped table-sm">
    <thead>
    <tr>
        <th>Category</th>
        <th>Details</th>
        <th>Total (CHF)</th>
    </tr>
    </thead>
    <tbody>
    {% for proposed_budget_item in proposal.proposedbudgetitem_set.all %}
        <tr>
            <td>{{ proposed_budget_item.category }} {{ proposed_budget_item.description }}</td>
            <td>
                <div class="border p-3 bg-white rounded">{{ proposed_budget_item.details|spi_linebreaksbr }}</div>
            </td>
            <td>{% if proposed_budget_item.amount %}
                {{ proposed_budget_item.amount|thousands_separator }}{% endif %}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

