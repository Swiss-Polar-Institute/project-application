{% extends '_base.tmpl' %}
{% load static %}
{% block title %}Projects application{% endblock %}

{% block body_contents %}
    <div class="container" role="main">
        {% include "_logo.tmpl" %}

        {% include "_messages-box.tmpl" %}

        <H1>Proposal</H1>
        <p><strong>{{ proposal.title }}</strong></p>

        <p><strong>Call:</strong> {{ call_name }}</p>

        <h2>Applicant</h2>
        {% with applicant=proposal.applicant %}
            {{ applicant.academic_title }} {{ applicant.person.first_name }} {{ applicant.person.surname }} (Gender:
            {{ applicant.person.gender }})
            <br>
            <strong>Email:</strong> {{ email }}
            <br>
            <strong>Organisations:</strong>
            {% for organisation in applicant.organisations.all %}
                {{ organisation }}
                {% if not forloop.last %}, {% endif %}
            {% endfor %}
            <br>
            <strong>Group:</strong> {{ applicant.group }}
        {% endwith %}
        <p></p>
        <h2>Proposal</h2>
        <strong>Geographical areas:</strong>
        {% for area in proposal.geographical_areas.all %}
            {{ area }}
        {% endfor %}
        <br>

        <div class="row">
            <div class="col-4">
                <strong>Provisional start date:</strong> {{ proposal.provisional_start_date }}<br>
            </div>
            <div class="col-4">
                <strong>Provisional end date:</strong> {{ proposal.provisional_end_date }}<br>
            </div>
            <div class="col-4">
                <strong>Duration months:</strong> {{ proposal.duration_months|floatformat }}<br>
            </div>
        </div>
        <br>
        <h2>Project description</h2>
        {% for question_answer in questions_answers %}
            {{ question_answer.question }}<br>
            <div class="pre-with-newlines border p-3 bg-white rounded">{{ question_answer.answer }}</div>
            <br>
        {% endfor %}

        <h2>Budget requested</h2>
        <strong>Total requested budget:</strong> {{ proposal.total_budget }} CHF
        <p><strong>Maximum budget:</strong> {{ maximum_budget }} CHF</p>

        {% include '_accordion.tmpl' with prefix='budget' button_text='Budget details' template_file='_table-budget.tmpl' %}
        <br>
        <h2>Other sources of funding</h2>

        {% include '_accordion.tmpl' with prefix='funding' button_text='Funding details' template_file='_table-funding.tmpl' %}
        <br>
        <h2>Data agreement</h2>
        <strong>Agreed to data
            policy:</strong> {% include '_check-icon.tmpl' with value=proposal.applicant.data_policy %}<br>
        <strong>Agreed to contact
            newsletter:</strong> {% include '_check-icon.tmpl' with value=proposal.applicant.contact_newsletter %}

        <hr>
        <strong>Proposal created:</strong> {{ proposal.created_on }}<br>
        <strong>Proposal last modified:</strong> {{ proposal.modified_on }}
    </div>
{% endblock %}
