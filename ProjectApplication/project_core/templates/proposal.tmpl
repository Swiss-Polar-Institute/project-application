{% extends '_base.tmpl' %}
{% load static %}
{% block title %}Projects application{% endblock %}
{% load crispy_forms_tags %}


{% block body_contents %}
    <div class="container theme-showcase" role="main">
        {% include "_logo.tmpl" %}
        <H1>{{ action }} proposal</H1>

        {% include "_messages-box.tmpl" %}

        <p><b>Call name:</b> {{ call_name }}</p>

        <p><b>Deadline for application:</b> {{ call_submission_deadline|date:"D d M Y" }} {{ call_submission_deadline|time:"H:i" }} Swiss time

        <p><b>Please complete all mandatory fields and press submit. Following submission of your proposal, you will be given a link which will allow editing of your proposal until the application deadline.</b></p>

        <div class="introductory-message shadow p-3 mb-5 bg-white rounded">{{ call_introductory_message }}</div>

        <form action="{{ proposal_action_url }}" method="post">
            {% csrf_token %}

            <h1>Part 1: General Information</h1>
            <h2>Applicant</h2>
            {% crispy person_form %}

            <h2>Proposal</h2>
            {% crispy proposal_form %}

            <h1>Part 2: Project Description</h1>
            {% include "_form_dynamic_questions.tmpl" %}

            <h1>Budget requested</h1>
            {% include "_form_budget.tmpl" %}

            <h1>Other sources of funding</h1>
            {% include "_form_funding_organisations.tmpl" %}

            {% crispy data_collection_form %}

            {% include "_submit-button.tmpl" %}

            <p>
                You will still be able to edit this proposal after submission, until the application deadline.
            </p>
        </form>
        <p>
    </div>
{% endblock %}
