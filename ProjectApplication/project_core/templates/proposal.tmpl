{% extends '_base.tmpl' %}
{% load static %}
{% block title %}Projects application{% endblock %}
{% load crispy_forms_tags %}


{% block body_contents %}
    <div class="container theme-showcase" role="main">
        {% include "_logo.tmpl" %}
        <H1>{{ action }} proposal</H1>

        {% include "messages-box.tmpl" %}

        <p><b>Call name:</b> {{ call_name }}</p>

        <p><b>Deadline for application:</b> {{ call_submission_deadline }}

        <div class="introductory-message border rounded">{{ call_introductory_message }}</div>

        <form action="{{ proposal_action_url }}" method="post">
            {% csrf_token %}

            <h1>Part 1: General Information</h1>
            <h2>Applicant</h2>
            {% crispy person_form %}

            <h2>Proposal</h2>
            {% crispy proposal_form %}

            <h1>Part 2: Project Description</h1>
            {% include "_form_dynamic_questions.tmpl" %}

            <h1>Budget</h1>
            {% include "_form_budget.tmpl" %}

            <h1>Funding organisations</h1>
            {% include "_form_funding_organisations.tmpl" %}
            {% include "submit-button.tmpl" %}
        </form>
        <p>
    </div>
{% endblock %}
