{% extends 'common/_base.tmpl' %}
{% load static %}
{% block title %}Management login{% endblock %}

{% block body_contents %}
    <div class="container" role="main">
        {% include 'common/_logo.tmpl' %}
        <p></p>
    </div>

    <section class="authentication">
        <div class="container">
            <div class="card-authentication">
                <h1>Register</h1>
                <p>Please enter you information below</p>

                {% if form.errors %}
                    <div class="authentication_error">
                        <p>There were some errors in the information you entered. Please correct the following:</p>
                        <ul>
                            {% for field in form %}
                                {% if field.errors %}<li>{{ field.label }}: {{ field.errors|striptags }}</li>{% endif %}
                            {% endfor %}
                        </ul>
                    </div>
                {% endif %}

                <form method="post" action="{% url 'register' %}">
                    {% csrf_token %}
                    <div class="form-fields-container">
                        <div class="floating-label">
                            <input type="text" name="{{ form.username.name }}" placeholder="Username" value="{{ form.username.value|default_if_none:'' }}">
                            {{ form.username.label_tag }}
                        </div>

                        <div class="floating-label">
                            <input type="email" name="{{ form.email.name }}" placeholder="Email" value="{{ form.email.value|default_if_none:'' }}">
                            {{ form.email.label_tag }}
                        </div>
                    </div>

                    <div class="card-authentication--cta">
                       {% include 'common/_submit-button.tmpl' %}
                        <input type="hidden" name="next" value="{{ next }}"/>
                    </div>

                    <div class="divider"></div>

                    <div class="checkbox-wrapper">
                        <div id="div_id_data_collection_form-privacy_policy" class="custom-control custom-checkbox">
                            <input type="checkbox" name="data_collection_form-privacy_policy" class="checkboxinput custom-control-input" required="" id="id_data_collection_form-privacy_policy">
                            <label for="id_data_collection_form-privacy_policy" class="custom-control-label requiredField">
                                I agree to my personal data being saved by SPI for the administration of my proposal
                                <span class="asteriskField">*</span>
                            </label>
                            <small id="hint_id_data_collection_form-privacy_policy" class="form-text text-muted">By ticking this box you agree to the Swiss Polar Insitute (SPI) storing your personal data for the purpose of administering your proposal. The data you provide here will be kept private and held securely by the SPI. Anonymised statistics will be produced about the proposal applications. If your proposal is selected for funding, your data will also be used for the administration of your project and may contribute to scientific metadata for the project.</small>
                        </div>
                    </div>

                    <div class="divider"></div>

                    <p>If you have any issue please contact: <a href="mailto:grants@swisspolar.ch" title="grants@swisspolar.ch">grants@swisspolar.ch</a></p>
                    <p>
                        <a href="{% url 'homepage' %}" title="GO TO HOMEPAGE" class="link-red">
                            <span>GO TO HOMEPAGE</span>
                            <span class="icon">
                                <img src="{% static 'images/angle-right.svg' %}" alt="Right Arrow">
                            </span>
                        </a>
                    </p>
                    <br>
                    <p>Already have an account? <a href="{% url 'login' %}" title="Sign in here">Sign in here</a></p>
                </form>
            </div>
        </div>
    </section>
{% endblock %}
