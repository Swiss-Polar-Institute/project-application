<table class="table table-striped table-sm">
    <thead>
        <tr>
            <td>Organisation</td>
            <td>Funding status</td>
            <td>Amount (CHF)</td>
        </tr>
    </thead>
    <tbody>
    {% for proposal_funding_item in proposal.proposalfundingitem_set.all %}
        <tr>
            <td>{{ proposal_funding_item.organisation.long_name }}</td>
            <td>{{ proposal_funding_item.funding_status }}</td>
            <td>{{ proposal_funding_item.amount }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
