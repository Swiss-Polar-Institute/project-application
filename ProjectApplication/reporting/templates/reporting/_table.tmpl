{% load thousands_separator %}
{% load get_dictionary_value %}

<div class="row">
    <div class="col-6">
        <table class="table table-striped table-sm table-hover display">
            <thead>
            <tr>
                {% for header in table.headers %}
                    <th>{{ header }}</th>
                {% endfor %}
            </tr>
            </thead>

            <tbody>
            {% for row in table.data %}
                <tr>
                    {% for header in table.headers %}
                        <td>{{ row|get_dictionary_value:header }}</td>
                    {% endfor %}
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
